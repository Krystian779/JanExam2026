<Window x:Class="JanuaryExam2026.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanuaryExam2026"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Filter" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="36"/>
        <Label Content="Robot List" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="64"/>
        <Label Content="Robot Details" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="82"/>
        <ListBox x:Name="lbxRobots" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Grid.RowSpan="3"/>
        <TextBox x:Name="tbxDetails" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Grid.RowSpan="3"/>
        <RadioButton x:Name="rbAll" Content="All Robots" Grid.Row="1" Grid.Column="0" Margin="5,5,5,5" IsChecked="True" Grid.RowSpan="3"/>
        <RadioButton x:Name="rbHousehold" Content="HouseHold" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" IsChecked="True" Grid.RowSpan="3"/>
        <RadioButton x:Name="rbDelivery" Content="Delivery" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5" IsChecked="True" Grid.RowSpan="3"/>
        <Button x:Name="btnCharge" Content="Charge" Grid.Row="4" Grid.Column="3" Margin="5,5,5,5" Click="btnAddRobot_Click" Width="150" Height="40"/>


    </Grid>
</Window>
